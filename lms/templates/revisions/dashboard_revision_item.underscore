<li>
    <a href="<%- url %>">
        <%- name %>
        <% if (due_date) { %>
            (<%= gettext("before") %> <%
                var d = new Date(due_date*1000),
                    fragments = [
                        d.getDate(),
                        d.getMonth() + 1,
                        d.getFullYear()
                    ];
                print(fragments.join('/'));
                %>)
        <% } %>
    </a>
</li>
